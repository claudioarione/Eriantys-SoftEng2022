            <Image url="/gameboard/cranio_logo.png"/>
         </image>
      </ImageView>
      <Button fx:id="loginBtn" alignment="CENTER" layoutX="242.0" layoutY="256.0" mnemonicParsing="false"
              onAction="#onLoginBtnPressed" text="LOGIN" textAlignment="CENTER">
         <font>
            <Font name="Baskerville Old Face" size="20.0"/>
         </font>
         <padding>
            <Insets bottom="10.0" left="25.0" right="25.0" top="10.0"/>
         </padding>
      </Button>
      <Text layoutX="207.0" layoutY="185.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Insert your username">
         <font>
            <Font name="Baskerville Old Face" size="22.0"/>
         </font>
      </Text>
      <TextField fx:id="usernameTextField" layoutX="183.0" layoutY="200.0" promptText="Username...">
         <font>
            <Font name="Baskerville Old Face" size="17.0"/>
         </font>
      </TextField>
   </children>
</AnchorPane>
